    span.billHandHH2 票据当前状态
    #billHandleForm
        form(action="/submit" method="POST" onsubmit="return confirm('检查无误，发布票据？')")
            .billAttr
                .submitBillInfo
                    .singleEntry
                        label 票据号码
                        br
                        input(type="text" name="BHbillInfoID" disabled="disabled")
                    .singleEntry
                        label 票据金额
                        br
                        input(type="text" name="BHbillInfoAmt" disabled="disabled")
                    .singleEntry
                        label 票据类型
                        br
                        input(type="text" name="BHbillInfoType" disabled="disabled")
                .submitBillDate
                    .singleEntry
                        label 票据出票日期
                        br
                        input(type="text" name="BHbillIssueDate" disabled="disabled")
                    .singleEntry
                        label 票据到期日期
                        br
                        input(type="text" name="BHbillDeadDate" disabled="disabled")
                .submitBillIA
                    .singleEntry
                        label 出票人名称
                        br
                        input(type="text" name="BHissuerName" disabled="disabled")
                    .singleEntry
                        label 出票人证件号
                        br
                        input(type="text" name="BHissuerID" disabled="disabled")
                    .singleEntry
                        label 承兑人名称
                        br
                        input(type="text" name="BHacceptorName" disabled="disabled")
                    .singleEntry
                        label 承兑人证件号
                        br
                        input(type="text" name="BHacceptOrID" disabled="disabled")
                .submitBillPH
                    .singleEntry
                        label 收款人名称
                        br
                        input(type="text" name="BHpayeeName" disabled="disabled")
                    .singleEntry
                        label 收款人证件号
                        br
                        input(type="text" name="BHpayeeID" disabled="disabled")
                    .singleEntry
                        label 持票人名称
                        br
                        input(type="text" name="BHholderName" disabled="disabled")
                    .singleEntry
                        label 持票人证件号
                        br
                        input(type="text" name="BHholderID" disabled="disabled")
    select(name="操作选择")#BHselectCommand
        option(value="")
    #BHusedtohidden
        #BHaddtionWrap
            #BHaddtionAttr
                .BHadttionLeft
                    span 若发起背书请填写被背书人信息：
                    br
                    label 被背书人名称
                    br
                    input(type="text" name="BHendorseeName" placeholder="填入被背书人名称")
                    span &nbsp;&nbsp;
                    .tooltip
                        span.tooltiptext this is tip "hello"
                        span.fa.fa-question-circle
                .BHadttionRight
                    br
                    label 被背书人证件号
                    br
                    input(type="text" name="BHendorseeID" disabled="disabled")

    #BHbuttonwrap
        button(type="button")#BHbuttonEndorse
            span.fa.fa-arrow-circle-up &nbsp;&nbsp;
            span 发起背书
        span &nbsp;&nbsp;
        button(type="button")#BHbuttonAccept
            span.fa.fa-check-circle &nbsp;&nbsp;
            span 签收背书
        span &nbsp;&nbsp;
        button(type="button")#BHbuttonReject
            span.fa.fa-ban &nbsp;&nbsp;
            span 拒绝背书
        span &nbsp;&nbsp;
        button(type="button")#BHbuttonClose
            span.fa.fa-close &nbsp;&nbsp;
            span 关闭